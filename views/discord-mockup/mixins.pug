mixin msg(icon, name, msg)
    .message
        .icon: img.responsive-img(src=icon)
        .body
            .user-name= name
            if msg
                .content= msg
            else if block
                block
            else
                .content No content provided.

mixin embed-content
    .embed-wrapper
        .color-pill
        .content-inner
            block

mixin embed-desc
    .embed-wrapper
        .color-pill
        .content-inner
            .description
                block